@import 'reset.css'
@import 'nib'
@import 'fonts'

html
	font-size 16px
 
body
	background #232426
	font-family 'open_sansregular'
	width 100vw
	height 100vh

//Helper Classes

.bold
	font-family 'open_sansbold'
		
.light
	font-family 'open_sanslight'
	
//Home

#home
	position fixed
	z-index 11
	img
		width 100%

	
//Header

.header
	width 100%
	position fixed
	z-index 10
	
	
.headerContent
	width 100%
	display inline-flex
	padding-top .6em
	
.aboutUs
.addZones
	color white
	font-size 2.3em
	
.addZones
	margin-left .1em
.aboutUs
	margin-right .1em
	
.aboutModal
	display none
	position fixed
	top 3em
	right .7em
	z-index 9
	.aboutTriangle
		position relative
		margin 0 auto
		right -6.5em
		border-left 6px solid transparent
		border-right 6px solid transparent
		border-bottom 6px solid white	
		width 1px	
	.aboutContent
		position relative
		top -1px
		background white
		border-radius 3px
		width 15em
		height 22em
		overflow auto
		.aboutText
			font-family 'open_sansitalic'
			padding 0 .5em
			margin 0 .5em
			font-size .8em
			text-align justify
			h3
				font-family 'open_sansregular'	

.addModal
	display none
	position fixed
	top 3em
	left .7em
	z-index 9
	.addTriangle
		position relative
		margin 0 auto
		left -7em
		border-left 6px solid transparent
		border-right 6px solid transparent
		border-bottom 6px solid white	
		width 1px	
	.addContent
		position relative
		padding .5em
		top -1px
		background white
		border-radius 3px
		width 15em
		height 21em
		.city
			border-bottom 1px solid lightgrey
			padding .5em 0
			height 1.2em
			line-height 1.3em
			.removeCity
				float left
				color grey
			.cityInfo
				display inline-block
				margin-left .5em
				.cityName
					font-family 'open_sansbold'
					margin-right .5em
				small
					font-family 'open_sansitalic'
					color grey
				
			.addCity
				float right
				color #36A5B0

.addCity
.removeCity
	font-size 1.2em	
		
.title
	color white
	font-size 1.6em
	line-height 1.4em
	margin 0 auto

	.singular
		font-size .95em
		
	.timeZones
		font-size 1em
		

		

//Content app

.content
	width 100%
	height 100%
	
	
.yourTimeZone
	position fixed
	width 100%
	height 100%
	z-index 6
	top 3.5em
		
	
.yourTime
.currentTime
	
	width 4.2em
	
	
.yourTime
	z-index 7
	left 0
	margin 0 auto
	position absolute
	right 0

.currentTime
	left 0
	margin 0 auto
	position absolute
	right 0
	z-index 3

.currentTag
.yourTag
	border-radius 2px
	box-shadow -1px -1px 2px black
	color white
	
	

.currentTag
	background #008999
	
	
.yourTag
	background #648F32
	
	
.yourTriangle
	border-left 3px solid transparent
	border-right 3px solid transparent
	border-top 3px solid #648F32
	margin 0 auto	
	width .5px

.currentTriangle
	border-left 3px solid transparent
	border-right 3px solid transparent
	border-top 3px solid #008999
	margin 0 auto
	width .5px
	
.currentTriangle
.yourTriangle
	position relative
	top -.5px
	
.tagTime
	font-size .9em
	height .9em
	line-height 1.2em
	text-align center
	

.infoText
	font-size .4em
	text-align center
	word-spacing -.1em
		

.barsZone
	position relative
	color white
	width 100%
	top 2.7em
	z-index 1
	
.moveZone
	position fixed
	width 100%
	height 100%
	z-index 4
	top 3.5em
	
	

.yourLine
	background #648F32
	
	
.currentLine
	background #008999
	
	
.yourLine
.currentLine
	box-shadow -1px 2px 2px rgba(40, 40, 40, 0.72)
	border-left .6px
	border-right .6px
	margin 0 auto
	position relative
	top -2px
	width 1.2px

/*.line
	height 1.2em*/

	
.bars
	position relative
	width 80.2em
	margin-bottom .75em
	box-shadow -1px -2px 2px black
	display flex
	.offBar
		.noon
			background linear-gradient(top, #676B6C, #494C4D)
		.midnight
		.night
			background linear-gradient(top, #4A4A4A, #323333)
		.morning
		.afternoon
			background linear-gradient(top, #535758, #393B3D)
		
	.onBar
		.noon
			background linear-gradient(top, #4DBBD6, #358193)
		.midnight
		.night
			background linear-gradient(top, #4E7BA2, #375875)
		.morning
		.afternoon
			background linear-gradient(top, #36A5B0, #277583)
			
	.yourOnBar
		.noon
			background linear-gradient(top, #AAEF3E, #76A62A)
		.midnight
		.night
			background linear-gradient(top, #7DAC2A, #597B1A)
		.morning
		.afternoon
			background linear-gradient(top, #A0DA3A, #6C9327)

.midnight
	width 6.5em
.morning 
	width 2.3em
.noon
	width 11.3em
.afternoon
	width 4.26em
.night
	width 2.3em

			
.midnight
.morning
.noon
.afternoon
.night
	height 1.8em

	
.yourOnBar	
.onBar
.offBar
	display flex
	width 26.7em
	height 100%
	
.infoBarsZone
	position fixed
	z-index 5
	width 100%
	height 100%
	top 3.5em
	
	
.barInfo
	position relative
	margin-bottom .75rem
	font-size 1.3em
	height 1.8rem
	text-shadow -1px -1px 1px black
	width 100%
	top 2.1em
	right 0
	left 8.6em

.barTime
	font-family 'open_sansbold'
	
.barText
	margin-left .2em
	
.barText
.barTime
	display inline-block
	color white
	margin-top .2rem

.barCity
.barDate
	display block
	font-size .45em
	height .9em
	padding .1em 0
	
	
.adds
	position fixed
	width 100%
	z-index 8
	bottom 1em
	.addsContent
		position relative
		border-radius 2px
		background white
		right .3em
		margin 0 auto
		width 17.5em
		height 5em
		.addsClose
			position absolute
			color white
			top -.75em
			right -.75em
			

//Media querys

@media screen and (min-width:359px)

	html
		font-size 18px
		
@media screen and (min-width:370px)

	html
		font-size 19px


@media screen and (min-width:380px)

	html
		font-size 20px
		
@media screen and (min-width:410px)

	html
		font-size 21px

@media screen and (min-width:512px)

	html
		font-size 28px

@media screen and (min-width:712px)

	html
		font-size 38px